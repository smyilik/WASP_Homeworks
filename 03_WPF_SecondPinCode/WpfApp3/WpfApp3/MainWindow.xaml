        <Slider x:Name="slider" HorizontalAlignment="Left" Height="514" Margin="433,76,0,0" VerticalAlignment="Top" Width="20" Orientation="Vertical" FontSize="48" Maximum="99" Minimum="1" IsSnapToTickEnabled="True"/>
        <Label x:Name="label" Content="1&#xD;&#xA;" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="86" Margin="400,10,0,0" Foreground="White" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
