        <Button x:Name="_3" Content="3" HorizontalAlignment="Right" Height="100" Margin="0,178,117,0" VerticalAlignment="Top" Width="120" Background="#FF393939" Foreground="White" FontSize="48"/>
        <Button x:Name="_5" Content="5" HorizontalAlignment="Left" Height="100" Margin="136,283,0,0" VerticalAlignment="Top" Width="120" Background="#FF393939" Foreground="White" FontSize="48"/>
        <Button x:Name="_1" Content="1" HorizontalAlignment="Left" Height="100" Margin="11,178,0,0" VerticalAlignment="Top" Width="120" Background="#FF393939" Foreground="White" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="_6" Content="6" HorizontalAlignment="Left" Height="100" Margin="261,283,0,0" VerticalAlignment="Top" Width="120" Background="#FF393939" Foreground="White" FontSize="48"/>
        <Button x:Name="_8" Content="8" HorizontalAlignment="Left" Height="100" Margin="136,388,0,0" VerticalAlignment="Top" Width="120" Background="#FF393939" Foreground="White" FontSize="48"/>
        <Button x:Name="_9" Content="9" HorizontalAlignment="Left" Height="100" Margin="261,388,0,0" VerticalAlignment="Top" Width="120" Background="#FF393939" Foreground="White" FontSize="48"/>
        <Button x:Name="_0" Content="0" HorizontalAlignment="Left" Height="100" Margin="136,493,0,0" VerticalAlignment="Top" Width="120" Background="#FF393939" Foreground="White" FontSize="48"/>
