        <PasswordBox x:Name="_box" Height="142" Margin="6,15,112,0" VerticalAlignment="Top" Width="380" Background="#FF282626" FontSize="48" Foreground="White" PasswordChanged="_box_PasswordChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyDown="_box_KeyDown" MouseEnter="_box_MouseEnter"/>
