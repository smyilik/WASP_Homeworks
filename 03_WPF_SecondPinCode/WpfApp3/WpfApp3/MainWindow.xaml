        mc:Ignorable="d"
        Title="MainWindow" Height="610" Width="500" HorizontalAlignment="Center" Margin="-1,-1,-1,-1" ResizeMode="CanResize" SizeToContent="WidthAndHeight" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ShowInTaskbar="False" Topmost="True">
    <Grid Width="498" Height="610" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Black">
