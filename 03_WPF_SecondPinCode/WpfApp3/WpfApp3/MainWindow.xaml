        <Button x:Name="_7" Content="7" HorizontalAlignment="Left" Height="100" Margin="11,388,0,0" VerticalAlignment="Top" Width="120" Background="#FF393939" Foreground="White" FontSize="48"/>
        <Button x:Name="_X" Content="❌" HorizontalAlignment="Left" Height="100" Margin="11,493,0,0" VerticalAlignment="Top" Width="120" Background="#FFAF0000" Foreground="White" FontSize="48" Click="_X_Click"/>
